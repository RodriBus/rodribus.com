@{
    var educations = Outputs
        .FromPipeline(nameof(RodriBusCom.Pipelines.LoadEducationsEs))
        .Where(model => model.IsContentful<Education>())
        .Select(model => model.AsContentful<Education>())
        .OrderByDescending(model => model.StartDate)
        ;
    var aptitudes = Outputs
        .FromPipeline(nameof(RodriBusCom.Pipelines.LoadAptitudesEs))
        .Where(model => model.IsContentful<Aptitude>())
        .Select(model => model.AsContentful<Aptitude>())
        ;
    var knowledges = Outputs
        .FromPipeline(nameof(RodriBusCom.Pipelines.LoadKnowledgesEs))
        .Where(model => model.IsContentful<Knowledge>())
        .Select(model => model.AsContentful<Knowledge>())
        ;
    var skills = knowledges
        .Where(k => !k.ShowAsOtherKnowledge)
        .OrderBy(k => k.Priority).ThenBy(k => k.Title)
        ;
    var others = knowledges
        .Where(k => !k.ShowAsOtherKnowledge)
        .OrderBy(k => k.Priority).ThenBy(k => k.Title)
        ;
    var experiences = Outputs
        .FromPipeline(nameof(RodriBusCom.Pipelines.LoadExperiencesEs))
        .Where(model => model.IsContentful<Experience>())
        .Select(model => model.AsContentful<Experience>())
        .OrderByDescending(model => model.EndDate)
        ;
}

