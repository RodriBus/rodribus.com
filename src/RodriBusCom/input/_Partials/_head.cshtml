@if (string.IsNullOrEmpty(Model.GetString("Title")))
{
    <title>@GlobalSettings.SiteOptions.Title</title>
}
else
{
    <title>@Model.GetString("Title") - @GlobalSettings.SiteOptions.Title</title>
}

