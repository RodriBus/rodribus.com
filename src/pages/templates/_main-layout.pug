block variables

doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="author", content=$i18n.meta.author)
    meta(name="description", content=$i18n.meta.description)
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    block head.title
      - var title = ""
    if title
      title #{title} | #{$i18n.common.fullname}
    else
      title #{$i18n.common.fullname}

    block styles
      link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
      link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
      link(rel="stylesheet" type="text/css" href="/css/bundle.min.css")

  body
    block header
      include ../includes/_header.pug

    block content

    block footer
      include ../includes/_footer.pug

    script(type="text/javascript" src='//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(type="text/javascript" src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(type="text/javascript" src='//cdn.rawgit.com/garand/sticky/master/jquery.sticky.js')
    script(type="text/javascript" src='/js/bundle.min.js')
