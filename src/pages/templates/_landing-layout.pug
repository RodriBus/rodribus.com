block variables

doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="author", content="Diego Rodríguez Suárez-Bustillo (http://rodribus.com)")
    meta(name="description", content="Web personal de Diego Rodríguez Suárez-Bustillo")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    block head.title
      - var title = ""
    if title
      title #{title} | Diego Rodríguez Suárez-Bustillo
    else
      title Diego Rodríguez Suárez-Bustillo

    block styles
      link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
      link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
      link(rel="stylesheet" type="text/css" href="/css/bundle.min.css")

  body

    block content

    script(type="text/javascript" src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(type="text/javascript" src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(type="text/javascript" src='https://cdn.rawgit.com/garand/sticky/master/jquery.sticky.js')
    script(type="text/javascript" src='/js/bundle.min.js')
